{
  "schemaVersion": 1,
  "id": "highlight_item",
  "version": "${version}",

  "name": "Highlight Item",
  "description": "Highlights inventory items similar to the one hovered over.",
  "authors": [
    "elmital"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/highlightitem",
    "sources": "https://github.com/elmital/HighLightItem",
    "issues": "https://github.com/elmital/HighLightItem/issues"
  },

  "license": "GPL-3.0",
  "icon": "assets/highlight_item/icon.png",

  "environment": "client",
  "entrypoints": {
    "main": [
      "be.elmital.highlightItem.HighlightItem"
    ],
    "client": [
      "be.elmital.highlightItem.HighLightItemClient"
    ],
    "modmenu": [ "be.elmital.highlightItem.libs.ModMenuAPIIntegration" ]
  },
  "mixins": [
    "highlight_item.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.16.14",
    "fabric": "*",
    "minecraft": "1.21.6",
    "java": ">=21"
  },
  "suggests": {
    "another-mod": "*"
  }
}
